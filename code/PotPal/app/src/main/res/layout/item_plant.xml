<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/parent"
    app:cardElevation="12dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/plantImageView"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/plantNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/plantImageView"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@id/plantImageView" />

        <TextView
            android:id="@+id/commonNamesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Common Names"
            android:textSize="14sp"
            android:layout_toEndOf="@id/plantImageView"
            android:layout_below="@id/plantNameTextView"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="36dp"/>

        <TextView
            android:id="@+id/plantTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Type"
            android:textSize="14sp"
            android:layout_toEndOf="@id/plantImageView"
            android:layout_below="@id/commonNamesTextView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp" />

        <ImageButton
            android:id="@+id/removeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            app:tint="@color/red"
            android:src="@android:drawable/ic_menu_delete" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>